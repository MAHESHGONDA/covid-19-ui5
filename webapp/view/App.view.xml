					<!--		</l:PaneContainer>-->
					<!--	</l:PaneContainer>-->
					<!--</l:ResponsiveSplitter>-->
					<!--</Panel>-->
				</content>
				<footer>
					<OverflowToolbar >
						<ToolbarSpacer/>
						<html:div class="sapyardLogo sapUiTinyMarginEnd">
							<Image src="images/402776.png"/>
						</html:div>
					</OverflowToolbar>
				</footer>
			</Page>
		</pages>
	</App>
</mvc:View>